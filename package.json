{
  "name": "simple-quiz-composer",
  "homepage": "https://edu-games-academy.github.io/Simple-Quiz-Composer",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "prepare": "husky install"
  },
  "lint-staged": {
    "sqc-core-functions/**/*.ts": "yarn --cwd sqc-core-functions run lint:fix",
